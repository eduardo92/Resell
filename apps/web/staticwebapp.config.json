{
  "navigationFallback": {
    "rewrite": "/index.html",
    "exclude": [
      "/api/*",
      "/_next/*",
      "/favicon.ico"
    ]
  },
  "routes": [
    {
      "route": "/api/*",
      "allowedRoles": [
        "anonymous"
      ]
    },
    {
      "route": "/sites/:slug",
      "rewrite": "/sites/view/index.html?slug={slug}"
    }
  ],
  "platform": {
    "apiRuntime": "node:18"
  },
  "trailingSlash": "never"
}